{
  "coc": {
    "codeLens": {
      "enable": true
    },

    "preferences": {
      "rootPatterns": ["build.sbt", "build.sc", "build.grade", "pom.xml"],
      "formatOnSaveFiletypes": ["typescript", "css", "markdown", "javascript", "clojure"],
      "formatOnType": true
    },

    "languageserver": {
      "graphql": {
        "command": "graphql-lsp",
        "args": ["server", "-m", "stream"],
        "filetypes": ["typescript", "typescriptreact", "graphql"]
      }
    },

    "eslint": {
      "enable": true,
      "alwaysShowStatus": true
    }
  },
  "metals": {
    "showInferredType": true,
    "statusBarEnabled": true,
    "superMethodLensesEnabled": true,
    "showImplicitArguments": true
  }
}
